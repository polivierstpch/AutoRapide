@model AutoRapide.MVC.Models.Vehicule

@{
    ViewData["Title"] = "Nouveau véhicule";
}

<h1>Afficher un nouveau véhicule</h1>

<h4>Veuillez remplir les champs ci-dessous:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Constructeur" class="control-label"></label>
                <input asp-for="Constructeur" class="form-control" />
                <span asp-validation-for="Constructeur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modele" class="control-label"></label>
                <input asp-for="Modele" class="form-control" />
                <span asp-validation-for="Modele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnneeFabrication" class="control-label"></label>
                <input asp-for="AnneeFabrication" class="form-control" />
                <span asp-validation-for="AnneeFabrication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreSiege" class="control-label"></label>
                <input asp-for="NombreSiege" class="form-control" />
                <span asp-validation-for="NombreSiege" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Couleur" class="control-label"></label>
                <input asp-for="Couleur" class="form-control" />
                <span asp-validation-for="Couleur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIV" class="control-label"></label>
                <input asp-for="NIV" class="form-control" />
                <span asp-validation-for="NIV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image1Url" class="control-label"></label>
                <input asp-for="Image1Url" class="form-control" />
                <span asp-validation-for="Image1Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image2Url" class="control-label"></label>
                <input asp-for="Image2Url" class="form-control" />
                <span asp-validation-for="Image2Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstDisponible" /> @Html.DisplayNameFor(model => model.EstDisponible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des véhicules</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
